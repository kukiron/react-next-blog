{
  "name": "react-next-blog",
  "version": "1.0.0",
  "description": "Production ready blog + boilerplate for Next.js",
  "author": "Kafil Uddin Kiron",
  "license": "MIT",
  "scripts": {
    "dev": "node server.js",
    "build": "next build",
    "heroku-postbuild": "next build",
    "start": "NODE_PATH=. NODE_ENV=production node server.js",
    "lint": "standard 'api/*' 'components/*' 'layouts/*' 'pages/*' 'styles/*' 'routes.js' 'server.js'",
    "precommit": "lint-staged"
  },
  "engines": {
    "node": ">=6.0"
  },
  "dependencies": {
    "babel-eslint": "^8.2.3",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-styled-components": "^1.5.1",
    "express": "^4.16.3",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.0",
    "next": "^9.3.2",
    "next-routes": "^1.4.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "standard": "^11.0.1",
    "styled-components": "^3.2.6"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "**/node_modules/**"
    ]
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "git add"
    ]
  }
}
